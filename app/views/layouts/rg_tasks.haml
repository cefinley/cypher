!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    / %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    / %meta{:content => "text/css", "http-equiv" => "content-style-type"}/
    / %meta{:content => "text/javascript", "http-equiv" => "content-script-type"}/
    / - if AppConfig.on_line        
    /   <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
    / - else
    /   = stylesheet_link_tag 'jquery-ui-1.8.11.custom.css', :media => 'screen, projection', :type => 'text/css'
    / = stylesheet_link_tag 'universal.css', :media => 'screen, projection', :type => 'text/css'
    / = stylesheet_link_tag 'administration_screen.css', :media => 'screen, projection', :type => 'text/css'
    / = stylesheet_link_tag 'jquery.jqplot.min.css', :media => 'screen, projection', :type => 'text/css'
    / - if AppConfig.on_line
    /   %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js", :type => "text/javascript"}
    /   %script{:src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.js", :type => "text/javascript"}
