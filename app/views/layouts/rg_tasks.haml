    %title= h(yield(:title) || "Cypher" )
    /= stylesheet_link_tag 'application'
    = stylesheet_link_tag 'cypher'
    = javascript_include_tag 'jquery'
    = yield(:head)
  %body
    #header
      .inner-container.clearfix
        %h1#logo
          %a.home{:href => "/", :title => "Go to Realgravity homepage"}
            %img{:src => "/images/realgravity_logo.png", :width => "250"}/
          / %span.ir
    #nav.admin
      .inner-container.clearfix
        .top-menu
          %ul.dropdown
            %li.root-item.dashboard_menu
              %a{:href => "/rg_tasks"} scheduler
            %li.root-item.networks_menu
              %a{:href => "#nogo"} console
            %li.root-item.companies_menu
              %a{:href => "#nogo"} history
            %li.root-item.contracts_menu
              %a{:href => "#nogo"} feeds
            %li.root-item.users_menu
              %a{:href => "#nogo"} transcoder
            %li.root-item.publishers_menu
              %a{:href => "#nogo"} reporting
            %li.root-item.domains_menu
              %a{:href => "#nogo"} system health
            %li.root-item.providers_menu
              %a{:href => "#nogo"} alerts
    
    #container.admin
      .content
        = yield
    #footer.admin
      %p &copy; RealGravity Inc, 2010 </p>